@model IEnumerable<Module6_7_Palmer.Models.Customer>
@{ ViewBag.Title = "Customers";}

<a asp-action="AddCustomer" asp-controller="Contact" class="ml-2">Add Customer</a>
<table class="table mt-2">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Email Address</th>
            <th>Street</th>
            <th>City</th>
            <th>State</th>
            <th>Zipcode</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Module6_7_Palmer.Models.Customer customer in Model)
            {
        <tr>
            <td>
                <a asp-action="CustomerDetails" asp-controller="Administration"
                   asp-route-model="@ViewBag.Action" asp-route-type="@ViewBag.Type" asp-route-val="@customer.Slug">
                    @customer.FirstName
                </a>
            </td>
            <td>
                <a asp-action="CustomerDetails" asp-controller="Administration"
                   asp-route-model="@ViewBag.Action" asp-route-type="@ViewBag.Type" asp-route-val="@customer.Slug">
                    @customer.LastName
                </a>
            </td>
            <td>@customer.PhoneNumber</td>
            <td>@customer.EmailAddress</td>
            <td>@customer.Street</td>
            <td>@customer.City</td>
            <td>@customer.State</td>
            <td>@customer.Zipcode</td>
        </tr>
            }
    </tbody>
</table>